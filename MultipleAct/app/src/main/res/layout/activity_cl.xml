<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#FFFFFF"
    tools:context=".CLActivity">

    <ImageView
        android:id="@+id/CLImage0"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/android_gif"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <ImageView
        android:id="@+id/CLImage2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/android_blue"
        app:layout_constraintBottom_toTopOf="@+id/CLImage0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/CLImage1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:src="@drawable/android_green"
        app:layout_constraintBottom_toBottomOf="@+id/CLImage2"
        app:layout_constraintEnd_toStartOf="@+id/CLImage2"
        app:layout_constraintTop_toTopOf="@+id/CLImage2" />


    <ImageView
        android:id="@+id/CLImage3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:src="@drawable/android_white"
        app:layout_constraintBottom_toBottomOf="@+id/CLImage2"
        app:layout_constraintStart_toEndOf="@+id/CLImage2"
        app:layout_constraintTop_toTopOf="@+id/CLImage2" />

    <Button
        android:id="@+id/CLBackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="32dp"
        android:onClick="onClickHomeButton"
        android:text="@string/home_menu"
        app:layout_constraintEnd_toEndOf="@+id/CLImage0"
        app:layout_constraintStart_toStartOf="@+id/CLImage0"
        app:layout_constraintTop_toBottomOf="@+id/CLImage0" />


</androidx.constraintlayout.widget.ConstraintLayout>